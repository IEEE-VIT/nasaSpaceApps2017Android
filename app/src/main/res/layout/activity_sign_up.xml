<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.ieeevit.spaceappsvellore.SignUpActivity">

    <LinearLayout
        android:id="@+id/sign_up_lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:padding="10dp"
            android:text="SIGN UP"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:padding="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="WHO ARE YOU?"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sign_up_lv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sign_up_lv1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/ic_alien_technical"
                android:id="@+id/signup_alien_technical"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/textView1"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="TECHNICAL"
                android:textColor="#BD1E2D" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/signup_alien_mngt"
                android:src="@drawable/ic_alien_management"
                android:layout_gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:id="@+id/textView2"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="MANAGEMENT"
                android:textColor="#36CB8A" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/signup_alien_design"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_alien_designer" />
            <TextView
                android:id="@+id/textView3"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="DESIGN"
                android:textColor="#E15AAE" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sign_up_lv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/sign_up_lv2">

        <EditText
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:ellipsize="start"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:hint="NAME"
            android:paddingTop="10dp"/>
        <EditText
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:ellipsize="start"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:hint="EMAIL"
            android:paddingTop="10dp"/>
        <EditText
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:ellipsize="start"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="ORGANISATION"
            android:paddingTop="10dp"/>
        <EditText
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:ellipsize="start"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:hint="CONTACT"
            android:paddingTop="10dp"/>
        <EditText
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:ellipsize="start"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:inputType="textPassword"
            android:hint="PASSWORD"
            android:paddingTop="10dp"/>
        <EditText
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:ellipsize="start"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="LOCATION"
            android:paddingTop="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:id="@+id/sign_up_lv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/sign_up_lv3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="SUBMIT"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <LinearLayout
        android:padding="10dp"
        android:id="@+id/sign_up_lv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/sign_up_lv4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@color/colorPrimaryDark"
            android:text="Already have an account. Login here"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</RelativeLayout>

